{
  "name": "sequences",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev:scheduler": "bun run src/apps/scheduler/index.ts",
    "dev:worker": "bun run src/apps/worker/index.ts",
    "dev:pump": "bun run src/apps/pump/index.ts",
    "dev:all": "concurrently \"bun run dev:scheduler\" \"bun run dev:worker\" \"bun run dev:pump\"",
    "typecheck": "bun tsc --noEmit",
    "start:pump": "bun run dist/apps/pump/index.js",
    "start:scheduler": "bun run dist/apps/scheduler/index.js",
    "start:worker": "bun run dist/apps/worker/index.js",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "env:validate": "bun run scripts/validate-env.ts",
    "env:check": "bun run env:validate",
    "build": "bun build --target=bun --outdir=dist ./src/apps/scheduler/index.ts ./src/apps/worker/index.ts ./src/apps/pump/index.ts",
    "build:minify": "bun build --target=bun --outdir=dist ./src/apps/scheduler/index.ts ./src/apps/worker/index.ts ./src/apps/pump/index.ts --minify",
    "docker:build": "docker compose -f docker-compose.prod.yml build",
    "docker:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose -f docker-compose.prod.yml down",
    "docker:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:prune": "docker system prune -f",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@google/genai": "^1.19.0",
    "@types/amqplib": "^0.10.7",
    "amqplib": "^0.10.9",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@types/bun": "latest",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.43.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
